        ],
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 100,
            "minLength": 8,
            "type": "string"
          },
          "price": {
            "maximum": 999999999,
            "minimum": 0,01,
            "type": "number",
            "format": "double"
